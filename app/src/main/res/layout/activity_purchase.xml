<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_purchase"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_320"
            android:scaleType="centerCrop"
            android:src="@drawable/img_fea_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_title_unlimited"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24"
            android:gravity="center"
            android:text="@string/lb_title_unlimited"
            android:textSize="@dimen/font_24"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_purchase"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/tv_title_access"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/lb_title_access"
            android:textSize="@dimen/font_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_unlimited"
            tools:ignore="SpUsage" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ly_free"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_176"
            android:layout_marginStart="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginEnd="@dimen/dimen_8"
            android:background="@drawable/bg_border_purchase"
            app:layout_constraintEnd_toStartOf="@id/ly_fee"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_access">

            <ImageView
                android:id="@+id/btn_check_free"
                android:layout_width="@dimen/dimen_24"
                android:layout_height="@dimen/dimen_24"
                android:layout_margin="@dimen/dimen_10"
                android:src="@drawable/ic_check_circle"
                android:tint="@color/sky_300"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription,UseAppTint" />

            <TextView
                android:id="@+id/tv_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:gravity="center"
                android:text="@string/lb_monthly"
                android:textSize="@dimen/font_16"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_check_free"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/tv_free_trial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lb_sub_monthly_price"
                android:textColor="@color/sky_300"
                android:textSize="@dimen/font_18"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_free"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/tv_desc_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_12"
                android:paddingHorizontal="@dimen/dimen_10"
                android:text="@string/lb_desc_free"
                android:textAlignment="center"
                android:textColor="@color/gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_free_trial" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- GÃ³i Fee -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ly_fee"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_176"
            android:layout_marginStart="@dimen/dimen_8"
            android:layout_marginEnd="@dimen/dimen_20"
            android:background="@drawable/bg_border_purchase"
            app:layout_constraintBottom_toBottomOf="@id/ly_free"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ly_free"
            app:layout_constraintTop_toTopOf="@id/ly_free">

            <ImageView
                android:id="@+id/btn_check_fee"
                android:layout_width="@dimen/dimen_24"
                android:layout_height="@dimen/dimen_24"
                android:layout_margin="@dimen/dimen_10"
                android:src="@drawable/ic_uncheck_circle"
                android:tint="@color/sky_300"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription,UseAppTint" />

            <TextView
                android:id="@+id/tv_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:text="@string/lb_inapp_one"
                android:textSize="@dimen/font_16"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_check_fee"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:id="@+id/tv_fee_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lb_inapp_price"
                android:textColor="@color/sky_300"
                android:textSize="@dimen/font_18"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_fee"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/tv_desc_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_12"
                android:paddingHorizontal="@dimen/dimen_10"
                android:text="@string/lb_desc_yearly"
                android:textAlignment="center"
                android:textColor="@color/gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_fee_" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16"
            android:backgroundTint="@color/sky_300"
            android:text="@string/lb_continue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ly_free"
            app:layout_constraintVertical_bias="0.9" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/btn_close_overlay"
        android:layout_width="@dimen/dimen_28"
        android:layout_height="@dimen/dimen_28"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginEnd="@dimen/dimen_20"
        android:src="@mipmap/ic_close"
        android:tint="@color/white"
        tools:ignore="ContentDescription,UseAppTint" />
</FrameLayout>
